@model IEnumerable<Sistema_Facturacion.Models.Reporte_Cliente>

@{
    ViewData["Title"] = "Reporte Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function ShowSelected() {
        var cod = document.getElementById("cliente").value;

        console.log(cod);

        var url = "@Url.Action("ReporteVentasCliente", "Reportes_ProductosFecha", new { Codigo_Cliente = "param-id" })";
        url = url.replace("param-id", cod);
            $("#result").load(url);
            window.location.href = url;
    }
</script>

<h1>Reporte Ventas Cliente</h1>


<div class="form-group">
    <label class="control-label"></label>
    <select id="cliente" class="form-control" onchange="ShowSelected()" asp-items="ViewBag.Codigo_Cliente"></select>

</div>





<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Dia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
