@using Microsoft.AspNetCore.Identity @* vista parcial de login donde se define si esta autorizado muestre el nombre de la persona guardado en l acookie  *@

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Claims.First().Value!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Home" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
 
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Login</a>
        </li>
    }
</ul>
